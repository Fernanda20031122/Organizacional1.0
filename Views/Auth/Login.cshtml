@model Organizacional.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2>Iniciar Sesión</h2>

<form asp-action="Login" method="post">
    <div class="mb-3">
        <label asp-for="Correo" class="form-label">Correo</label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Contrasena" class="form-label">Contraseña</label>
        <input asp-for="Contrasena" class="form-control" type="password" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ingresar</button>

    <a asp-action="OlvidoContrasena" asp-controller="Usuarios" class="btn btn-link">¿Olvidaste tu contraseña?</a>
</form>
<p class="mt-3">
    <a asp-action="OlvidoContrasena">¿Olvidate tu contraseña?</a>
</p>

