@{
    ViewData["Title"] = "Asignar Técnico";
    var tecnicos = ViewBag.Tecnicos as List<SelectListItem>;
    int idDocumento = (int)ViewBag.IdDocumento;
}

<h2>Asignar Técnico</h2>

<form asp-action="AsignarTecnico" method="post">
    <input type="hidden" name="idDocumento" value="@idDocumento" />

    <div class="form-group">
        <label for="idTecnico">Seleccionar Técnico:</label>
        <select class="form-control" id="idTecnico" name="idTecnico" required>
            <option value="">-- Selecciona --</option>
            @foreach (var tecnico in tecnicos)
            {
                <option value="@tecnico.Value">@tecnico.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Asignar</button>
</form>