@model Organizacional.Models.Usuario

@{
    ViewData["Title"] = "Crear Técnico";
    Layout = "_Layout";
}

<h2>Crear Técnico</h2>

<form asp-action="CrearTecnico" method="post" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Correo" class="form-label">Correo electrónico</label>
        <input asp-for="Correo" type="email" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="ContrasenaTemporal" class="form-label">Contraseña Provisional</label>
        <input type="password" name="ContrasenaTemporal" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Crear Técnico</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}