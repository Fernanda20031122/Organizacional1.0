@model List<Organizacional.Models.Usuario>

@{
    ViewData["Title"] = "Técnicos Registrados";
}

<div class="container mt-4">
    <h2 class="mb-4">Técnicos Registrados</h2>

    <a asp-action="CrearTecnico" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Crear nuevo técnico
    </a>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">
            @TempData["Mensaje"]
        </div>
    }

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Estado</th>
                <th>Fecha de creación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Correo</td>
                    <td>
                        @if (usuario.Estado == "activo")
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td>@usuario.FechaCreacion?.ToString("dd/MM/yyyy") ?? "No registrada"</td>

                </tr>
            }
        </tbody>
    </table>
</div>