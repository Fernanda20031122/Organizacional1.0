@model List<Organizacional.Models.Tarea>

@{
    ViewData["Title"] = "Mis Tareas";
}

<h2>Mis Tareas Asignadas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Documento</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model)
        {
            <tr>
                <td>@tarea.IdDocumentoNavigation?.NumeroDocumento</td>
                <td>
                    <span class="badge bg-secondary">@tarea.Estado</span>
                </td>
                <td>
                    <a asp-action="Detalle" asp-route-id="@tarea.IdDocumento" class="btn btn-info btn-sm">Ver Detalle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
